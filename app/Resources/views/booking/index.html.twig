{% extends 'WarehouseBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - booking index
{% endblock %}

{% block body %}

    <div class="page-title" style="display:none;">
      <div class="title_left">
        <h3>Booking Listing <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></h3>
      </div>
      <div class="title_right"></div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12">
            {% for type, flashMessages in app.session.flashbag.all() %} 
            {% for flashMessage in flashMessages %}
            <div class="alert alert-{{ type }} alert-dismissible fade in">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                {{ flashMessage|raw }}
            </div>
             {% endfor %} 
             {% endfor %} 
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                  <h2><a href="{{ path('booking') }}">Bookings</a> <small>Order management</small></h2>
                  <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                    <li><a class="close-link"><i class="fa fa-close"></i></a></li>
                  </ul>
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <!-- FILTERING -->
                    <form class="well" action="{{ path('booking') }}" method="get" >
                    <div class="col-md-12">
                        {{ form_row(filterForm.orderNumber) }}
                        <div  id="filters" class="collapse">

                            
                                <div class="row">
                                    <div class="col-md-6">{{ form_row(filterForm.orderReference) }}</div>
                                    <div class="col-md-6">{{ form_row(filterForm.orderType) }}</div>
                                    <div class="col-md-6">{{ form_row(filterForm.status) }}</div>
                                    <div class="col-md-6">{{ form_row(filterForm.carrierId) }}</div>
                                    <div class="col-md-6">{{ form_row(filterForm.pickingFlag) }}</div>
                                    <div class="col-md-6">{{ form_row(filterForm.futureship) }}</div>

                                    <div class="col-md-6">
                                        {{ form_rest(filterForm) }}
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-warning" name="filter_action" value="filter"> <span class="glyphicon glyphicon-filter" aria-hidden="true"></span> Filter</button>
                                            <button type="submit" class="btn btn-default" name="filter_action" value="reset"><span class="glyphicon glyphicon-minus" aria-hidden="true"></span> Reset</button>
                                        </div>
                                    </div>
                                </div>
                            
                        </div>
                    </div>

                    </form>
                    <!-- END FILTERING -->

                    <div class="col-md-3 pull-left">
                        
                        <!-- PAGE SIZE -->
                        <div class="pagination form-inline ">
                            <select class = "form-control"  onchange="window.location = this.value" >
                                <option value='{{ path('booking', app.request.query.all|merge({'pcg_show': '10'})) }}' {% if app.request.get('pcg_show') == 10 %} selected {% endif %}>10</option>
                                <option value='{{ path('booking', app.request.query.all|merge({'pcg_show': '20'})) }}' {% if app.request.get('pcg_show') == 20 %} selected {% endif %}>20</option>
                                <option value='{{ path('booking', app.request.query.all|merge({'pcg_show': '50'})) }}' {% if app.request.get('pcg_show') == 50 or app.request.query.get('pcg_show') == '' %} selected {% endif %}>50</option>
                                <option value='{{ path('booking', app.request.query.all|merge({'pcg_show': '100'})) }}' {% if app.request.get('pcg_show') == 100 %} selected {% endif %}>100</option>
                                <option value='{{ path('booking', app.request.query.all|merge({'pcg_show': '500'})) }}' {% if app.request.get('pcg_show') == 500 %} selected {% endif %}>500</option>
                            </select>
                        </div>
                        <!-- END PAGE SIZE -->

                    </div>

                    <div class="col-md-6">


                    </div>

                    <div class="col-md-3">

                            <a class="btn btn-primary h3 pull-right" href="{{ path('booking_new') }}" style="margin-bottom:10px">
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New
                            </a>
                            <a class="btn dropdown-toggle pull-right h3" data-toggle="collapse" data-target="#filters">
                            Filter
                            <span class="caret"></span>
                        </a>
                    </div>

                    <div class="col-md-12">
                        {%- if form_errors(filterForm) %}
                        <div class="alert alert-block alert-error fade in form-errors">
                            {{ form_errors(filterForm) }}
                        </div>
                        {% endif %}
                    </div>

                    <form method="POST" id="bulk_form" action="{{ path('booking_bulk_action') }} ">
                        <div class="row">
                            <div class="table-responsive col-md-12">
                                <table class="table table-striped jambo_table bulk_action" cellspacing="0" cellpadding="0">
                                    <thead>
                                        <tr>
                                            <th width="20px"><input type="checkbox" class="check-all" onclick="toggleAll(this)"></th>

                                                {% import "PetkoparaCrudGeneratorBundle::macros/th_sortable.html.twig" as macros %}
                                                {#<th>{{macros.th_sortable('id',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'booking')}}</th>#}
                                                <th>{{macros.th_sortable('orderNumber',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'booking')}}</th>
                                                <th>{{macros.th_sortable('pickingFlag',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'booking')}}</th>
                                                <th>{{macros.th_sortable('orderType',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'booking')}}</th>
                                                <th>{{macros.th_sortable('status',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'booking')}}</th>
                                                <th>{{macros.th_sortable('carrierId',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'booking')}}</th>
                                                <th>{{'Line Items'}}</th>
                                                <th>{{'Quantity'}}</th>
                                                {#<th>{{macros.th_sortable('skidCount',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'booking')}}</th>#}
                                                <th>{{macros.th_sortable('futureship',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'booking')}}</th>
                                                <th>{{macros.th_sortable('shipped',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'booking')}}</th>
                                                <th>{{macros.th_sortable('created',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'booking')}}</th>
                                                {#<th>{{macros.th_sortable('modified',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'booking')}}</th>#}

                                           
                                            <th width = "80px">List</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for booking in bookings %}
                                        <tr>
                                            <td><input type="checkbox" name="ids[]" onclick='bulkSubmitBtnManage();' class="check-all" value="{{booking.id}}"/></td>
                                            {#<td><a href="{{ path('booking_edit', { 'id': booking.id }) }}">{{ booking.id }}</a></td>#}
                                            <td><a href="{{ path('booking_edit', { 'id': booking.id }) }}">{{ booking.orderNumber }}</a></td>
                                            <td>
                                                {% if booking.pickingFlag %}
                                                    <i class="fa fa-flag aero"></i>
                                                {% endif %}
                                            </td>
                                            <td>{{ bookingUtil.bookingOrderTypeName(booking.orderType) }}</td>
                                            <td>{{ bookingUtil.bookingStatusName(booking.status) }}</td>
                                            <td>{{ bookingUtil.bookingCarrierName(booking.carrierId) }}</td>
                                            <td>
                                                <a href="{{ path('booking_edit', { 'id': booking.id }) }}">{{ booking.products|length }}{% if booking.skidCount > 0 %} ({{booking.skidCount}} skids){% endif %}</a>
                                                {% if booking.status <= 2 and bookingUtil.bookingIsFillable(booking) %}<span class="btn btn-success btn-xs pull-right">Fillable</span>{% endif %}
                                            </td>
                                            <td>{{ bookingUtil.bookingProductQuantityTotal(booking) }}</td>
                                            {#<td>{{ booking.skidCount }}</td>#}
                                            <td>{% if booking.futureship %}{{ booking.futureship|date('Y-m-d') }}{% endif %}</td>
                                            <td>{% if booking.shipped %}{{ booking.shipped|date('Y-m-d H:i:s') }}{% endif %}</td>
                                            <td>{% if booking.created %}{{ booking.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                                            {#<td>{% if booking.modified %}{{ booking.modified|date('Y-m-d H:i:s') }}{% endif %}</td>#}

                                            <td class="actions">
                                                <a  onclick="return confirm('Are you sure!');" title="Delete" class="btn btn-danger btn-sm" href="{{ path('booking_by_id_delete', { 'id': booking.id}) }}">
                                                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                                </a>
                                                {#<a title='Show' class="btn btn-info btn-sm" href="{{ path('booking_show', { 'id': booking.id }) }}">
                                                    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                                                </a>#}
                                                <a  title='Edit' class="btn btn-primary btn-sm" href="{{ path('booking_edit', { 'id': booking.id }) }}">
                                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                                </a>
                                            </td>


                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 pull-left">
                                <div class="pagination form-inline ">
                                    <select class = "form-control" name="bulk_action" >
                                        <option value="delete">DELETE</option>
                                        <option value="pickingon">PICKING YES</option>
                                        <option value="pickingoff">PICKING NO</option>
                                        <optgroup label="PRINT">
                                            <option value="print">Print list</option>
                                            <option value="print_w_documents">Print w/ Documents</option>
                                            <option value="print_wo_documents">Print w/o Documents</option>
                                        </optgroup>
                                    </select>
                                    <input type="submit" id='bulkSubmitBtn' onclick="return confirm('Are you sure?')" form="bulk_form" class="form-control btn btn-danger btn-sm" disabled>
                                </div>
                            </div>

                            <div class="col-md-6 col-md-offset-2 text-right">
                                 {{ pagerHtml|raw }} 
                            </div>
                        </div> <!-- /#bottom -->
                    </form>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

