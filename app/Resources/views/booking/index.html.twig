{% extends 'WarehouseBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - booking index
{% endblock %}

{% block body %}

    <div class="page-title" style="display:none;">
        <div class="title_left">
            <h3>Booking Listing <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></h3>
        </div>
        <div class="title_right"></div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12">
            {% for type, flashMessages in app.session.flashbag.all() %}
                {% for flashMessage in flashMessages %}
                    <div class="alert alert-{{ type }} alert-dismissible fade in">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                    aria-hidden="true">Ã—</span></button>
                        {{ flashMessage|raw }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2><a href="{{ path('booking') }}">Bookings</a>
                        <small>Order management</small>
                    </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <!-- FILTERING -->
                    <form class="well" action="{{ path('booking') }}" method="get">
                        <div class="col-md-12">
                            {{ form_row(filterForm.orderNumber) }}
                            <div id="filters" class="collapse">


                                <div class="row">
                                    <div class="col-md-6">{{ form_row(filterForm.orderReference) }}</div>
                                    <div class="col-md-6">{{ form_row(filterForm.orderType) }}</div>
                                    <div class="col-md-6">{{ form_row(filterForm.status) }}</div>
                                    <div class="col-md-6">{{ form_row(filterForm.carrierId) }}</div>
                                    <div class="col-md-6">{{ form_row(filterForm.pickingFlag) }}</div>
                                    <div class="col-md-6">{{ form_row(filterForm.futureship) }}</div>

                                    <div class="col-md-6">
                                        {{ form_rest(filterForm) }}
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-warning" name="filter_action"
                                                    value="filter"><span class="glyphicon glyphicon-filter"
                                                                         aria-hidden="true"></span> Filter
                                            </button>
                                            <button type="submit" class="btn btn-default" name="filter_action"
                                                    value="reset"><span class="glyphicon glyphicon-minus"
                                                                        aria-hidden="true"></span> Reset
                                            </button>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </form>
                    <!-- END FILTERING -->

                    <div class="col-md-3 pull-left">

                        <!-- PAGE SIZE -->
                        <div class="pagination form-inline ">
                            <select class="form-control" onchange="window.location = this.value">
                                <option value='{{ path('booking', app.request.query.all|merge({'pcg_show': '10'})) }}' {% if app.request.get('pcg_show') == 10 %} selected {% endif %}>
                                    10
                                </option>
                                <option value='{{ path('booking', app.request.query.all|merge({'pcg_show': '20'})) }}' {% if app.request.get('pcg_show') == 20 %} selected {% endif %}>
                                    20
                                </option>
                                <option value='{{ path('booking', app.request.query.all|merge({'pcg_show': '50'})) }}' {% if app.request.get('pcg_show') == 50 or app.request.query.get('pcg_show') == '' %} selected {% endif %}>
                                    50
                                </option>
                                <option value='{{ path('booking', app.request.query.all|merge({'pcg_show': '100'})) }}' {% if app.request.get('pcg_show') == 100 %} selected {% endif %}>
                                    100
                                </option>
                                <option value='{{ path('booking', app.request.query.all|merge({'pcg_show': '500'})) }}' {% if app.request.get('pcg_show') == 500 %} selected {% endif %}>
                                    500
                                </option>
                            </select>
                        </div>
                        <!-- END PAGE SIZE -->

                    </div>

                    <div class="col-md-6">


                    </div>

                    <div class="col-md-3">

                        <a class="btn btn-primary h3 pull-right" href="{{ path('booking_new') }}"
                           style="margin-bottom:10px">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New
                        </a>
                        <a class="btn dropdown-toggle pull-right h3" data-toggle="collapse" data-target="#filters">
                            Filter
                            <span class="caret"></span>
                        </a>
                    </div>

                    <div class="col-md-12">
                        {% if form_errors(filterForm) %}
                            <div class="alert alert-block alert-error fade in form-errors">
                                {{ form_errors(filterForm) }}
                            </div>
                        {% endif %}
                    </div>

                    <form class="" method="POST" id="bulk_form" action="{{ path('booking_bulk_action') }} ">
                        {% include 'booking/_index_booking_content.html.twig' with {'bookings':bookings} %}
                        <div class="row">
                            <div class="col-md-4 pull-left">
                                <div class="pagination form-inline ">
                                    <select class="form-control" name="form[action]">
                                        <option value="pickingOn">Picking Yes --> FLAG</option>
                                        <option value="pickingOff">Picking No --> UNFLAG</option>
                                        <option value="delete">Delete</option>
                                        <optgroup label="PICKING">
                                            <option value="pickSummary">Pick Summary</option>
                                        </optgroup>
                                        <optgroup label="PRINT">
                                            <option value="printWithDocuments">Print w/ Documents</option>
                                        </optgroup>
                                    </select>
                                    <input type="submit" id='bulkSubmitBtn'
                                           class="form-control btn btn-danger btn-sm" disabled>
                                </div>
                            </div>

                            <div class="col-md-6 col-md-offset-2 text-right">
                                {{ pagerHtml|raw }}
                            </div>
                        </div> <!-- /#bottom -->
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="booking_modal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content" id="modal_content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="modal_title"></h4>
                </div>
                <div class="modal-body" id="modal_body">
                </div>
            </div>
        </div>
    </div>

{% endblock %}

