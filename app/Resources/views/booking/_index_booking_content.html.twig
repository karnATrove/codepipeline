<div class="row">
    <div class="table-responsive col-md-12">
        <table class="table table-striped jambo_table bulk_action" cellspacing="0"
               cellpadding="0">
            <thead>
            <tr>
                <th width="20px"><input type="checkbox" class="check-all"
                                        onclick="toggleAll(this)"></th>

                {% import "PetkoparaCrudGeneratorBundle::macros/th_sortable.html.twig" as macros %}
                <th>{{ macros.th_sortable('orderNumber',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'booking') }}</th>
                <th>{{ macros.th_sortable('pickingFlag',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'booking') }}</th>
                <th>{{ macros.th_sortable('orderType',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'booking') }}</th>
                <th>{{ macros.th_sortable('status',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'booking') }}</th>
                <th>{{ macros.th_sortable('carrierId',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'booking') }}</th>
                <th>{{ 'Line Items' }}</th>
                <th>{{ 'Quantity' }}</th>
                <th>{{ macros.th_sortable('futureship',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'booking') }}</th>
                <th>{{ macros.th_sortable('shipped',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'booking') }}</th>
                <th>{{ macros.th_sortable('created',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'booking') }}</th>
                <th width="80px">List</th>
            </tr>
            </thead>
            <tbody>
            {% for booking in bookings %}
                <tr>
                    <td><input type="checkbox" name="form[orderIds][]" onclick='bulkSubmitBtnManage();'
                               class="check-all" value="{{ booking.id }}"/></td>
                    <td>
                        <a href="{{ path('booking_edit', { 'id': booking.id }) }}">{{ booking.orderNumber }}</a>
                    </td>
                    <td>
                        {% if booking.pickingFlag %}
                            <i class="fa fa-flag aero"></i>
                        {% endif %}
                    </td>
                    <td>{{ bookingUtil.bookingOrderTypeName(booking.orderType) }}</td>
                    <td>{{ bookingUtil.bookingStatusName(booking.status) }}</td>
                    <td>{{ bookingUtil.bookingCarrierName(booking.carrierId) }}</td>
                    <td>
                        <a href="{{ path('booking_edit', { 'id': booking.id }) }}">{{ booking.products|length }}
                            {% if booking.skidCount > 0 %} ({{ booking.skidCount }} skids){% endif %}</a>
                        {% if booking.status <= 2 and bookingUtil.bookingIsFillable(booking) %}
                            <span class="btn btn-success btn-xs pull-right">Fillable</span>{% endif %}
                    </td>
                    <td>{{ bookingUtil.bookingProductQuantityTotal(booking) }}</td>
                    <td>{% if booking.futureship %}{{ booking.futureship|date('Y-m-d') }}{% endif %}</td>
                    <td>{% if booking.shipped %}{{ booking.shipped|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if booking.created %}{{ booking.created|date('Y-m-d H:i:s') }}{% endif %}</td>

                    <td class="actions">
                        <a onclick="return confirm('Are you sure!');" title="Delete"
                           class="btn btn-danger btn-sm"
                           href="{{ path('booking_by_id_delete', { 'id': booking.id}) }}">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </a>
                        <a title='Edit' class="btn btn-primary btn-sm"
                           href="{{ path('booking_edit', { 'id': booking.id }) }}">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                    </td>


                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
</div>