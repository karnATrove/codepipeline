{% extends 'WarehouseBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - New booking
{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item active">Home</li>
    </ol>

    <section class="panel">
        <div class="x_title">
            <h2>New booking <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
                <small>Create a new booking</small></h2>
            <div class="clearfix"></div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="row">
                    <div class="col-md-12">
                        {% for type, flashMessages in app.session.flashbag.all() %}
                            {% for flashMessage in flashMessages %}
                                <div class="alert alert-{{ type }}">
                                    {{ flashMessage|raw }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                </div>

                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-12">
                        {{ form_widget(form) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <button type="submit" name="submit" value="save" class="btn btn-primary">
                            Save <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
                        </button>
                        <button type="submit" name="submit" value="saveAndAdd" class="btn btn-info">
                            Save and Add <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}

                <hr/>

                <div class="form-group">
                    <a class="btn btn-default" href="{{ path('booking') }}">
                        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                        Back to list
                    </a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

