{% extends '@Admin/base.html.twig' %}

{% block body %}
    {{ form_start(form) }}

    {% include '@Admin/user/_user_form.html.twig' with {'form':form} %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Description</th>
        </tr>
        </thead>
        <tbody>
        {% for discountRule in userDiscountRules %}
            <tr>
                <td>{{ discountRule.displayName }}</td>
                <td>{{ discountRule.type }}</td>
                <td>{{ discountRule.description }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ form_end(form) }}
{% endblock %}

{% block title %}
    Edit User
{% endblock %}

