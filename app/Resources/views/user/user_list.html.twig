{% extends 'WarehouseBundle::layout.html.twig' %}
{% block title %}
    Users
{% endblock %}

{% block body %}
    <a href="{{ path('user_create') }}" class="btn btn-success pull-right">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Create</a>

    <table class="table table-striped table-hover" style="margin-bottom: 0">
        <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Enabled</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {% if user.enabled %}
                        <span class="label label-success">
                            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Enabled</span>
                    {% else %}
                        <span class="label label-danger">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Disabled</span>
                    {% endif %}
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="...">
                        <a class="btn btn-default btn-sm" href="{{ path('user_edit',{'id':user.id}) }}">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</a>
                        {% if user.enabled %}
                            <a class="btn btn-danger btn-sm" href="{{ path('user_disable',{'id':user.id}) }}">Disable</a>
                        {% else %}
                            <a class="btn btn-success btn-sm" href="{{ path('user_enable',{'id':user.id}) }}">Enable</a>
                        {% endif %}
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}