{% for incomingScannedProduct in form.incomingScannedProducts %}
    {% if incoming.incomingScannedProducts[loop.index0].incomingProduct and incoming.incomingScannedProducts[loop.index0].incomingProduct.qty == incomingUtil.getIncomingProductScanCountByModel(incoming,incoming.incomingScannedProducts[loop.index0].product.model) %}
        <tr>
    {% else %}
        <tr  class="warning">
    {% endif %}

    <td width="100" class="form-inline">
        {% if not iscomplete %}
            <div class="form-group">
                <a data-confirm="Are you sure!" title="Delete" class="btn btn-danger btn-sm ajaxLink"
                   href="{{ path('incoming_products_scanned_delete_ajax', { 'id': incoming.incomingScannedProducts[loop.index0].id}) }}">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </a>
            </div>
            <div class="form-group">
                <a title="Split" class="btn btn-success btn-sm ajaxLink"
                   href="{{ path('incoming_products_scanned_split_ajax', { 'id': incoming.incomingScannedProducts[loop.index0].id}) }}">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                </a>
            </div>
        {% endif %}
    </td>
    <td>
        {{ incoming.incomingScannedProducts[loop.index0].product.model }}
    </td>
    <td>
        {% if incoming.incomingScannedProducts[loop.index0].incomingProduct %}
            {{ incoming.incomingScannedProducts[loop.index0].incomingProduct.qty }}
        {% else %}n/a{% endif %}</td>
    <td>{{ incomingUtil.getIncomingProductScanCountByModel(incoming,incoming.incomingScannedProducts[loop.index0].product.model) }}</td>
    <td width="170">
        {% if not iscomplete %}
            {{ form_widget(incomingScannedProduct.locationId,
                {'attr':
                    {
                        'data-url':path('incoming_product_scan_edit_ajax',{'id':incoming.incomingScannedProducts[loop.index0].id}),
                        'data-type': 'location'
                    }
                }) 
            }}
        {% else %}-{% endif %}</td>
    <td width="80">
        {% if not iscomplete %}
            {{ form_widget(incomingScannedProduct.qtyOnScan, {'attr':
                {
                    'data-url':path('incoming_product_scan_edit_ajax',{'id':incoming.incomingScannedProducts[loop.index0].id}),
                    'data-type': 'quantity'
                }
            }) }}
        {% else %}-{% endif %}
    </td>
    </tr>
{% endfor %}