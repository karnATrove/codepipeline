{% extends 'WarehouseBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - New product
{% endblock %}

{% block body %}

    <div class="page-title">
        <div class="title_left">
            <h3>New Incoming Container/Truck <span class="glyphicon glyphicon-truck" aria-hidden="true"></span></h3>
        </div>
        <div class="title_right"></div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12">
            {% for type, flashMessages in app.session.flashbag.all() %}
                {% for flashMessage in flashMessages %}
                    <div class="alert alert-{{ type }} alert-dismissible fade in">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                    aria-hidden="true">Ã—</span></button>
                        {{ flashMessage|raw }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Details
                        <small>Incoming information</small>
                    </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    {{ form_start(form) }}

                    <div class="row">

                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group {% if form_errors(form.name) %}item bad{% endif %}">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name) }}
                            </div>
                        </div>

                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group {% if form_errors(form.type) %}item bad{% endif %}">
                                {{ form_label(form.type) }}
                                {{ form_widget(form.type) }}
                            </div>
                        </div>

                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group {% if form_errors(form.status) %}item bad{% endif %}">
                                {{ form_label(form.status) }}
                                {{ form_widget(form.status) }}
                            </div>
                        </div>

                        <div class="col-xs-12 col-sm-6">

                        </div>

                        <div class="clearfix"></div>

                        <div class="col-xs-12">
                            <div class="row">
                                <div class="col-xs-12 col-sm-4">
                                    <div class="form-group {% if form_errors(form.eta) %}item bad{% endif %}">
                                        {{ form_label(form.eta) }}
                                        {{ form_widget(form.eta) }}
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-4">
                                    <div class="form-group {% if form_errors(form.scheduled) %}item bad{% endif %}">
                                        {{ form_label(form.scheduled) }}
                                        {{ form_widget(form.scheduled) }}
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-12 col-sm-6">
                                {{ form_rest(form) }}
                            </div>

                        </div>
                        {{ form_widget(form) }}
                        <p>
                            <button type="submit" name="submit" value="save" class="btn btn-primary">
                                Save <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
                            </button>
                            <button type="submit" name="submit" value="saveAndImport" class="btn btn-info">
                                Save and Import <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                            </button>
                        </p>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>

        <hr/>

        <div class="form-group">
            <a class="btn btn-default" href="{{ path('incoming') }}">
                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                Back to list
            </a>
        </div>
    </div>

{% endblock %}

