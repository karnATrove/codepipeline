<div id="booking_file">
	{{ form_errors(form) }}
	<div class="form-inline">
		<div class="form-group">
			{{ form_label(form.filepath) }}
			{{ form_widget(form.filepath,  {'attr': {'placeholder':'Select a document', 'title':'Document', 'class':'form-control'}}) }}
		</div>
		<div class="form-group">
			{{ form_label(form.type) }}
			{{ form_widget(form.type,  {'attr': {'placeholder':'Select a document type', 'title':'Document Type', 'class':'form-control'}}) }}
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-success">Upload</button>
		</div>
	</div>
	<div class="progress" style="display:none;">
		<div class="progress-bar progress-bar-info" aria-valuenow="0" style="width: 0%;"></div>
	</div>
</div>
