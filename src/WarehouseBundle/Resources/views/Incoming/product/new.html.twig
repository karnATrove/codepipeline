{% extends 'WarehouseBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} -  New incoming product
{% endblock %}

{% block body %}

    <div class="page-title" >
      <div class="title_left">
        <h3>Add Product</h3>
      </div>
      <div class="title_right"></div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12">
            {% for type, flashMessages in app.session.flashbag.all() %} 
            {% for flashMessage in flashMessages %}
            <div class="alert alert-{{ type }} alert-dismissible fade in">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                {{ flashMessage|raw }}
            </div>
             {% endfor %} 
             {% endfor %} 
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                  <h2>New Product for {{ incoming.name }} <small>Add in inbound container/forward</small></h2>
                  <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                    <li><a class="close-link"><i class="fa fa-close"></i></a></li>
                  </ul>
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">
                
                    <div class="row">

                        {{ form_start(form) }}

                        {{ form_widget(form) }}
                        <button type="submit" name="submit" value="save" class="btn btn-primary"> 
                            Save <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
                        </button>
                        <button type="submit" name="submit" value="save_new" class="btn btn-info"> 
                            Save and new <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                        </button>
                        {{ form_end(form) }}
                        
                    </div>
                </div>
            </div>
        </div>
    </div>


    <hr/>

                            
    <div class="form-group">
        <a class="btn btn-default" href="{{ path('incoming_products', {'incoming_id':incoming.id}) }}">
            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
            Back to list
        </a>
    </div>

{% endblock %}

