{% extends 'WarehouseBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} -  Edit incoming product
{% endblock %}

{% block body %}

    <div class="page-title" >
      <div class="title_left">
        <h3>Edit incoming product <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></h3>
      </div>
      <div class="title_right"></div>
    </div>

    <div class="clearfix"></div>

    <!-- Flash messaging -->
    {% include 'default/flash_messaging.html.twig' %}

    <div class="row">
        <div class="col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                  <h2>{{ incomingProduct.product.model }} <small>Change the quantity</small></h2>
                  <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                    <li><a class="close-link"><i class="fa fa-close"></i></a></li>
                  </ul>
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    
                    <!-- Form Errors -->
                    {% include 'default/form_errors.html.twig' with {'form':edit_form} %}
                    
                    {{ form_start(edit_form) }}

                    {{ form_widget(edit_form) }}
                    <p>
                        <button type="submit" class="btn btn-primary">
                            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Submit
                        </button>
                    </p>
                    {{ form_end(edit_form) }}
             
                    <hr/>

                            
                    <div class="form-group">
                        <a class="btn btn-default" href="{{ path('incoming_products', {'incoming_id':incomingProduct.incoming.id}) }}">
                            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                            Back to list
                        </a>
                        <a class="btn btn-info" href="{{ path('incoming_product_new', {'incoming':incomingProduct.incoming.id}) }}">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                            <span class="hidden-xs">New</span>
                        </a>
                        <form action="{{ path('incoming_product_delete', { 'incoming':incomingProduct.incoming.id, 'id': incomingProduct.id }) }}" method="post" style="display: inline-block;vertical-align:middle;">
                            <input type="hidden" name="_method" value="DELETE" />
                            {{ form_widget(delete_form) }}
                            <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                <span class="hidden-xs">Delete</span>
                            </button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>


    

{% endblock %}

