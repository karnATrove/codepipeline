{% extends 'WarehouseBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} -  Edit incoming product
{% endblock %}

{% block body %}

    <div class="page-title">
        <div class="title_left">
            <h3>Edit Incoming <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></h3>
        </div>
        <div class="title_right"></div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12">
            {% for type, flashMessages in app.session.flashbag.all() %}
                {% for flashMessage in flashMessages %}
                    <div class="alert alert-{{ type }} alert-dismissible fade in">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                    aria-hidden="true">Ã—</span></button>
                        {{ flashMessage|raw }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{ incoming.name }}
                        <small>Edit the details</small>
                    </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    {{ form_start(edit_form) }}

                    {% include 'WarehouseBundle:Incoming:_edit_create_form.html.twig' with {'edit_form':edit_form} %}
                    <p>
                        <button type="submit" class="btn btn-primary">
                            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Submit
                        </button>
                    </p>
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
    </div>
    <hr/>
    <div class="form-group">
        <a class="btn btn-default" href="{{ path('incoming') }}">
            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
            Back to list
        </a>
        <a class="btn btn-info" href="{{ path('incoming_new') }}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            New
        </a>
        <form action="{{ path('incoming_delete', { 'id': incoming.id }) }}" method="post"
              style="display: inline-block;vertical-align:middle;">
            <input type="hidden" name="_method" value="DELETE"/>
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                Delete
            </button>
        </form>
    </div>

{% endblock %}

