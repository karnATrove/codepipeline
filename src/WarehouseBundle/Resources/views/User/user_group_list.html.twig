{% extends '@Warehouse/layout.html.twig' %}

{% block body %}
    <a href="{{ path('user_group_create') }}" class="btn btn-success pull-right">Create</a>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Group Name</th>
        </tr>
        </thead>
        <tbody>
        {% for userGroup in userGroups %}
            <tr>
                <td><a href="{{ path('user_group_view',{'id':userGroup.id}) }}">{{ userGroup.name }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block title %}
    User Groups
{% endblock %}

