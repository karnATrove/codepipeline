{% extends '@Warehouse/layout.html.twig' %}

{% block body %}
    {% if userGroup.users %}
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>Email</th>
            </tr>
            </thead>
            <tbody>
            {% for user in userGroup.users %}
                <tr>
                    <td></td>
                    <td><a href="{{ path('user_view',{'id': user.id}) }}">{{ user.name }}</a></td>
                    <td>{{ user.email }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}

{% block title %}
    <h1>Group Name: {{ userGroup.name }}</h1>
{% endblock %}

