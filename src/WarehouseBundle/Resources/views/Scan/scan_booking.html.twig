<div class="lead">Booking Results</div>

<div class="table-responsive">
	<table class="table table-hover">
      <thead>
        <tr>
          <th>Booking</th>
          <th>Order Type</th>
          <th>Status</th>
          <th># Products</th>
        </tr>
      </thead>
      <tbody>
      	{% for bookingProduct in items %}
        <tr>
          <th scope="row"><a href="{{ path('booking_edit',{'id':bookingProduct.booking.id}) }}">{{ bookingProduct.booking.orderNumber }}</a></th>
          <td>{{ bookingUtil.bookingOrderTypeName(bookingProduct.booking.orderType) }}</td>
          <td>{{ bookingUtil.bookingStatusName(bookingProduct.booking.status) }}</td>
          <td>{{ bookingProduct.booking.products|length }}</td>
        </tr>
        {% endfor %}
        {% if items|length == 0 %}
        <tr>
          <td colspan="4">No results for {{ search }} for bookings.</td>
        </tr>
        {% endif %}
      </tbody>
    </table>
</div>