<hr />

<div class="row">
	<div class="col-xs-12">
	  	<div class="x_panel">
        {{ form_start(form, { 'attr': {'class':'ajaxForm no-enter-submit scan_location_form'}}) }}

	      <div class="x_title">
	        <h2><i class="fa fa-bars"></i> Build Location <small>{{ search }}</small></h2>
          <div class="pull-right">
            <div class="form-group">
              {{ form_widget(form.scanInventory, {'attr':{'id':'scan-inventory'}}) }}
            </div>
          </div>
	        <div class="clearfix"></div>
	      </div>
	      <div class="x_content" id="pickForProducts">

          {% if notice %}
          <div class="alert alert-error">
            {{ notice }}
          </div>
          {% endif %}
          
          {{ form_widget(form._token) }}
      	  <table id="datatable-keytable" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>&nbsp;</th>
                <th>Model</th>
                <th>Qty Scanned</th>
              </tr>
            </thead>
            <tbody class="locationProducts">
              
            </tbody>
          </table>
          
          
          <div class="clearfix"></div>

          <div class="actionBar">
            {{ form_widget(form.scanLocation, {'attr':{'id':'scan-inventory'}}) }}
            <input type="submit" class="btn btn-success btn-large" value="ADD" />
          </div>
          {{ form_rest(form) }}

	      </div>
        {{ form_end(form) }}
	    </div>
	</div>
</div>