{% extends 'WarehouseBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - New booking
{% endblock %}

{% block body %}
    <div class="page-title">
        <div class="title_left">
            <h2>New booking <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
                <small>Create a new booking</small></h2>
            <div class="clearfix"></div>
        </div>
        <div class="title_right"></div>
    </div>

    <div class="clearfix"></div>

    <!-- Flash messaging -->
    {% include 'default/flash_messaging.html.twig' %}

    <div class="row">
        <div class="col-xs-12">

            <div class="x_panel">
                <div class="x_title">
                    <h2><i class="fa fa-eye"></i> Order Information
                        <small>Contact details</small>
                    </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>

                <div class="x_content">
                    <div class="row">

                        <!-- Form Errors -->
                        {% include 'default/form_errors.html.twig' with {'form':form} %}

                        {{ form_start(form) }}
                            <div class="row">
                                <div class="col-xs-6">
                                    {{ form_row(form.orderNumber) }}
                                </div>
                                <div class="col-xs-6">
                                    {{ form_row(form.orderReference) }}
                                </div>
                                <div class="col-xs-6">
                                    {{ form_row(form.orderType) }}
                                </div>
                                <div class="col-xs-6">
                                    {{ form_row(form.carrierId) }}
                                </div>
                                <div class="col-xs-6">
                                    {{ form_row(form.skidCount) }}
                                </div>
                                <div class="col-xs-6">
                                    {{ form_row(form.status) }}
                                </div>
                                <div class="col-xs-6">
                                    {{ form_row(form.futureship) }}
                                </div>


                                <div class="col-md-12">
                                    {{ form_rest(form) }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <button type="submit" name="submit" value="save" class="btn btn-primary">
                                        Save <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
                                    </button>
                                    <button type="submit" name="submit" value="saveAndAdd" class="btn btn-info">
                                        Save and Add <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                    </button>
                                </div>
                            </div>
                        {{ form_end(form) }}

                        <hr/>

                        <div class="form-group">
                            <a class="btn btn-default" href="{{ path('booking') }}">
                                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                                Back to list
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

