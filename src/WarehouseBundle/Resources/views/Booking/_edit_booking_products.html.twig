<div class="x_panel">
    <div class="x_title">
        <h2>Booking Products
            <small>
                Showing list of booking products
            </small>
        </h2>
        <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
            <li><a class="close-link"><i class="fa fa-close"></i></a></li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <div class="row">
            <div class="col-md-12">
                <a class="btn btn-warning btn-xs" href="{{ path('pick_list',{'id':booking.id}) }}">Pick
                    List</a>
                <a class="btn btn-success btn-xs pull-right"
                   href="{{ path('pick_list_pdf',{'id':booking.id}) }}">PDF</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 table-responsive">
                <table id="datatable-keytable " class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>Model</th>
                        <th class="hidden-xs">Description</th>
                        <th>Ord<span class="hidden-xs">ered</span></th>
                        <th>Avail<span class="hidden-xs">able</span></th>
                        <th>Picked</th>
                        <th>Status</th>
                        <th class="hidden-xs" width="50"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for bookingProduct in booking.products %}
                        <tr class="bp-product" data-id="{{ bookingProduct.id }}">
                            <td>{{ bookingProduct.product.model }}</td>
                            <td class="hidden-xs">{{ bookingProduct.product.description }}</td>
                            <td>{{ bookingProduct.qty }}</td>
                            <td class="bp-available">{{ productUtil.getAvailableInternal(bookingProduct.product) }}</td>
                            <td class="bp-picked">{{ bookingUtil.bookingProductPickedQty(bookingProduct) }}
                                <span class="visible-xs pull-right"><a class="btn btn-dark btn-xs" id="booking_pick_trigger" data-toggle="modal"
                                   data-target=".bs-picking-modal" data-booking-product="{{ bookingProduct.id }}"
                                   data-href="{{ path('booking_product_pick_ajax',{'id':bookingProduct.id}) }}">Pick</a>
                                </span>
                            </td>
                            <td class="bp-status">{{ bookingUtil.bookingProductStatusName(bookingProduct.status) }}</td>
                            <td class="hidden-xs"><a class="btn btn-dark btn-xs" id="booking_pick_trigger" data-toggle="modal"
                                   data-target=".bs-picking-modal" data-booking-product="{{ bookingProduct.id }}"
                                   data-href="{{ path('booking_product_pick_ajax',{'id':bookingProduct.id}) }}">Pick</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>